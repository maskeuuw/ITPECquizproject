<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="320.0" prefWidth="340.0" style="-fx-background-color: #2e5ddf;" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.teacher.controller.ChangePasswordController">
   
   <children>
      <!-- Title Bar -->
      <HBox alignment="CENTER" prefHeight="60.0" prefWidth="340.0" style="-fx-background-color: #6699ff;">
         <children>
            <Label text="CHANGE PASSWORD" textFill="WHITE">
               <font>
                  <Font name="Monotype Corsiva" size="30.0" />
               </font>
            </Label>
         </children>
      </HBox>

      <!-- Labels and Input Fields -->
      <Label layoutX="36.0" layoutY="92.0" text="Teacher ID" textFill="WHITE">
         <font>
            <Font name="Monotype Corsiva" size="17.0" />
         </font>
      </Label>
      <Label layoutX="29.0" layoutY="139.0" text="Old Password" textFill="WHITE">
         <font>
            <Font name="Monotype Corsiva" size="17.0" />
         </font>
      </Label>
      <Label layoutX="19.0" layoutY="182.0" text="New Password" textFill="WHITE">
         <font>
            <Font name="Monotype Corsiva" size="17.0" />
         </font>
      </Label>
      <Label layoutY="227.0" text="Confirm Password" textFill="WHITE">
         <font>
            <Font name="Monotype Corsiva" size="17.0" />
         </font>
      </Label>
      
      <PasswordField fx:id="oldpassword" layoutX="120.0" layoutY="135.0" prefHeight="30.0" prefWidth="206.0" style="-fx-background-radius: 10px; -fx-font-size: 14px;" />
      
      <PasswordField fx:id="txtnewpassword" layoutX="120.0" layoutY="178.0" prefHeight="30.0" prefWidth="206.0" style="-fx-background-radius: 10px; -fx-font-size: 14px;" />
      
      <PasswordField fx:id="txtconfirmnewpassword" layoutX="120.0" layoutY="223.0" prefHeight="30.0" prefWidth="206.0" style="-fx-background-radius: 10px; -fx-font-size: 14px;" />

      <!-- Update Button -->
      <Button layoutX="96.0" layoutY="261.0" onAction="#btnChangePasswordAction" prefHeight="40.0" prefWidth="149.0" style="-fx-background-color: #ffcc00;" text="Update Password">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <TextField fx:id="txtid" disable="true" editable="false" layoutX="120.0" layoutY="88.0" prefHeight="30.0" prefWidth="206.0" style="-fx-background-radius: 10px; -fx-font-size: 14;" />
   </children>
   <effect>
      <InnerShadow />
   </effect>
</AnchorPane>
